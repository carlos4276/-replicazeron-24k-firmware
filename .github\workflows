name: Build QMK firmware

on:
  push:
    branches: [ main, master ]
  pull_request:
    branches: [ main, master ]

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      
    - name: Setup QMK
      uses: qmk/qmk_action@v1
      with:
        path: qmk_firmware
        
    - name: Create keyboard directory structure
      run: |
        mkdir -p qmk_firmware/keyboards/replicazeron_24k/keymaps/default
        
    - name: Copy keyboard files
      run: |
        # Copy main keyboard files
        cp analog.c qmk_firmware/keyboards/replicazeron_24k/
        cp analog.h qmk_firmware/keyboards/replicazeron_24k/
        cp config.h qmk_firmware/keyboards/replicazeron_24k/
        cp halconf.h qmk_firmware/keyboards/replicazeron_24k/
        cp info.json qmk_firmware/keyboards/replicazeron_24k/
        cp mcuconf.h qmk_firmware/keyboards/replicazeron_24k/
        cp replicazeron_24k.c qmk_firmware/keyboards/replicazeron_24k/
        cp replicazeron_24k.h qmk_firmware/keyboards/replicazeron_24k/
        cp rules.mk qmk_firmware/keyboards/replicazeron_24k/
        
        # Copy keymap
        cp keymap.c qmk_firmware/keyboards/replicazeron_24k/keymaps/default/
        
    - name: Compile firmware
      run: |
        cd qmk_firmware
        make replicazeron_24k:default
        
    - name: Upload firmware artifact
      uses: actions/upload-artifact@v4
      with:
        name: replicazeron_24k_firmware
        path: |
          qmk_firmware/*.bin
          qmk_firmware/*.hex
          qmk_firmware/*.uf2
        if-no-files-found: warn
